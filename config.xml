<?xml version="1.0" encoding="utf-8"?> 

<widget xmlns ="http:/www.w3.org/ns/widgets"
   xmlns:gap= "http://phonegap.example1"
   ID ="com.phonegap.example2"
   version="1.0.1">
   
   <name> app2 telefonia celular</name>
   
   <description> 
      Aplicacion que muestra informacion sobre la telefonia celular
   </description>
   
   <author herf="https://build.phonegap.com" email="sasukenarutosakura@live.com.mx">
    Clara Vanessa Camacho Tlatelpa
   </author>
   
  <!--pERSONALIZA LA APLICACION Y PLATAFROMA-->
  <preference name="orientacion" value="default"/>
  <!-->preference name="orientation" value="portrait"/>
  <preference name="orientation" value="landscape"/>-->
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="true"/>
  <preference name="android.installLocation" value="auto"/> 
  <preference name="permissions" value="INTERNET"/>
  
  <!--Plugins-->
  <!--Core pligins-->
  <plugin name="cordova-plugin-device" spec="~1.1.4"/>
  <plugin name="cordova plugin-vibration" spec="~2.1.3"/>
  <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
  
  <!--plugin name="cordova-plugin-geolocation" source="npm" />-->
    <!--Third part plugins-->
	<--Para accesar a paginas en internet-->
	<allow-internt href="https://*/*"/>
	<acces origin="https://*/*"/>
	<allow-intent href="http://*/*"/>
	<acces origin="http://*/*"/>
	<plugin name="cordova-plugin-whitelist" source="npm"/>
	
	<!--Colocar icono app-->
	
 <icon src="res/android/mdpi.png"/>
 
 </widget>